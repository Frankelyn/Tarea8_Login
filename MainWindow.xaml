<Window x:Class="RegistroUsuariosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistroUsuariosWPF"
        mc:Ignorable="d"
        Title="Ventana Principal" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Menu Height="18">
                <MenuItem Header="Registros">
                    
                    <MenuItem x:Name="RolMenuItem" Header="Registro Roles" Click="RolMenuItem_Click"></MenuItem>
                    <MenuItem x:Name="UsuariosMenuItem" Header="Registro Usuarios" Click="UsuariosMenuItem_Click"></MenuItem>

                </MenuItem>



                <MenuItem Header="Consultas">
                    <MenuItem x:Name="ConsultaUsuarioMenuItem" Header="Consulta de Usuarios" Click="ConsultaUsuarioMenuItem_Click"/>
                </MenuItem>



                <MenuItem Header="Ayuda">
                    <Menu/>
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
